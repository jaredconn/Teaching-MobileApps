<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.j.postfixcalculator.MainActivity">

    <EditText
        android:id="@+id/calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:height="90dp"
        android:layout_above="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:inputType="none"
        />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/result"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="167dp"
        android:columnCount="4"
        android:orientation="horizontal"
        android:id="@+id/gridLayout">


        <Button
            android:id="@+id/btn1"
            android:width="150dp"
            android:height="120dp"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            android:width="150dp"
            android:height="120dp"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            android:width="150dp"
            android:height="120dp"
            android:text="3" />

        <Button
            android:id="@+id/btnMult"
            android:width="150dp"
            android:height="120dp"
            android:text="*" />

        <Button
            android:id="@+id/btn4"
            android:width="150dp"
            android:height="120dp"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            android:width="150dp"
            android:height="120dp"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            android:width="150dp"
            android:height="120dp"
            android:text="6" />

        <Button
            android:id="@+id/btnDivd"
            android:layout_column="3"
            android:width="150dp"
            android:height="120dp"
            android:text="/" />

        <Button
            android:id="@+id/btn7"
            android:width="150dp"
            android:height="120dp"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            android:width="150dp"
            android:height="120dp"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            android:width="150dp"
            android:height="120dp"
            android:text="9" />

        <Button
            android:id="@+id/btn_"
            android:width="150dp"
            android:height="120dp"
            android:text="-" />


        <Button
            android:id="@+id/btn0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:width="150dp"
            android:height="120dp"
            android:text="0" />

        <Button
            android:id="@+id/btnDel"
            android:width="150dp"
            android:height="120dp"
            android:text="DEL" />

        <Button
            android:id="@+id/btnAc"
            android:width="150dp"
            android:height="120dp"
            android:text="AC" />


        <Button
            android:id="@+id/btnPlus"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:layout_rowSpan="3"
            android:text="+" />

        <Button
            android:id="@+id/button"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:width="150dp"
            android:height="120dp"
            android:onClick="onClick"
            android:text="=" />

        <Button
            android:id="@+id/btnSpace"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:width="150dp"
            android:height="120dp"
            android:text="--->" />

    </GridLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:width="200dp"
        android:height="90dp"
        android:gravity="center"
        android:text="Result" />

</RelativeLayout>
